<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF" >

    <TextView android:text="PieChart"
        android:textColor="#000000"
        android:background="#CCCCCC"		
		android:padding="10dip"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" />
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dip"
        >    
	    <LinearLayout 
	        android:orientation="vertical"
	        android:layout_width="0px"
	        android:layout_height="wrap_content"
	        android:layout_weight="1" >
	        
		    <LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal">
		        
		        <TextView
		            android:id="@+id/text_total_memory_title"
			        android:layout_width="0px"
			        android:layout_height="wrap_content"
			        android:layout_weight="1"
			        android:text="TOTAL : "
			        android:textStyle="bold" />
		        
		        <TextView
		            android:id="@+id/text_total_memory"
		            android:layout_weight="1"
			        android:layout_width="0px"
			        android:layout_height="wrap_content"
			        android:gravity="right"
			        android:text="KB" />  
			              
		    </LinearLayout>    
		    
		    <LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal">
		        
		        <TextView
		            android:id="@+id/text_available_memory_title"
		            android:layout_weight="1"
			        android:layout_width="0px"
			        android:layout_height="wrap_content"
			        android:text="FREE : "
			        android:textStyle="bold" />
		        
		        <TextView
		            android:id="@+id/text_available_memory"
		            android:layout_weight="1"
			        android:layout_width="0px"
			        android:layout_height="wrap_content"
			        android:gravity="right"
			        android:text="KB" />  
			              
		    </LinearLayout>
		
			<LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal">
		        
			    <TextView
			        android:id="@+id/text_used_memory_title"
			        android:layout_weight="1"
			        android:layout_width="0px"
			        android:layout_height="wrap_content"
			        android:text="USED : "
			        android:textStyle="bold" />
			    
			    <TextView
			        android:id="@+id/text_used_memory"
			        android:layout_weight="1"
			        android:layout_width="0px"
			        android:layout_height="wrap_content"
			        android:gravity="right"
			        android:text="KB" /> 
			           
			</LinearLayout>
			
			<LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal">
		        
			    <TextView
			        android:id="@+id/text_active_memory_title"
			        android:layout_weight="1"
			        android:layout_width="0px"
			        android:layout_height="wrap_content"
			        android:text="ACTIVE : "
			        android:textStyle="bold" />
			    
			    <TextView
			        android:id="@+id/text_active_memory"
			        android:layout_weight="1"
			        android:layout_width="0px"
			        android:layout_height="wrap_content"
			        android:gravity="right"
			        android:text="KB" /> 
			           
			</LinearLayout>
			
			<LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal">
		        
			    <TextView
			        android:id="@+id/text_inactive_memory_title"
			        android:layout_weight="1"
			        android:layout_width="0px"
			        android:layout_height="wrap_content"
			        android:text="INACTIVE : "
			        android:textStyle="bold" />
			    
			    <TextView
			        android:id="@+id/text_inactive_memory"
			        android:layout_weight="1"
			        android:layout_width="0px"
			        android:layout_height="wrap_content"
			        android:gravity="right"
			        android:text="KB" /> 
			           
			</LinearLayout>
			    
			
	    </LinearLayout>

        <LinearLayout
             android:id="@+id/chart_area"
             android:layout_width="0px"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:layout_weight="1" />  
        
    </LinearLayout>
                 
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10px" >
        
      	<TextView
	        android:id="@+id/text_use_battery_title"
	        android:layout_weight="1"
	        android:layout_width="0px"
	        android:layout_height="wrap_content"
	        android:text="-REMAIN BATTERY : "
	        android:textSize="16sp"
	        android:textStyle="bold" />
	    
	    <TextView
	        android:id="@+id/text_use_battery"
	        android:layout_weight="1"
	        android:layout_width="0px"
	        android:layout_height="wrap_content"
	        android:text=""
	        android:textSize="20sp"
	        android:textStyle="bold" /> 
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        
        <ListView 
            android:id="@+id/listview_active_app"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            />
        
    </LinearLayout>

</LinearLayout>